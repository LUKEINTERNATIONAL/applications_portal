<style>

  body {
    color: #3465a4;
    font-size: 24px;
  }

  .empty {
    border: 1px solid #ccc;
    border-radius: 15px;
    width: 180px;
    height: 150px;
    float: left;
    margin: 10px;
  }

  .button {
    border: 1px solid #3465a4;
    border-radius: 15px;
    width: 180px;
    height: 150px;
    float: left;
    margin: 10px;
    cursor: pointer;
    vertical-align: middle; 
    text-align: center;
  }

  .button:hover {
    background-color: #c2d3f4;
    color: #0e2a64;
    text-decoration: underline;
  }

  .button:active {
    background-color: #f3e7c0;
  }
	input {
			height: 2em;
			width: 100%;
			border-color: lightblue;
			font-size: 25;	
			-webkit-border-radius: 5px;
          	border-radius: 5px;	
		}
	option {
    font-size: 14px;
    padding: 5px;
}

	select {height: 6em;
			width: 100%;
			border-color: lightblue;
			font-size: 25;	
			-webkit-border-radius: 5px;
          	border-radius: 5px;	
	}
	.buttons{
			    border:1px solid #34740e; 
                 -webkit-border-radius: 3px; 
                 -moz-border-radius: 3px;
                 border-radius: 3px;
                 font-size:28px;
                 font-family:arial, helvetica, sans-serif; 
                 padding: 10px 10px 10px 10px; 
				 margin-left:10px;
                 text-decoration:none; 
                 display:inline-block;
                 text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
                 font-weight:bold; color: #FFFFFF;
                 background-color: #4ba614; 
                 background-image: -webkit-gradient(linear, left top, left bottom, from(#4ba614), to(#008c00));
                 background-image: -webkit-linear-gradient(top, #4ba614, #008c00);
                 background-image: -moz-linear-gradient(top, #4ba614, #008c00);
                 background-image: -ms-linear-gradient(top, #4ba614, #008c00);
                 background-image: -o-linear-gradient(top, #4ba614, #008c00);
                 background-image: linear-gradient(to bottom, #4ba614, #008c00);filter:progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#4ba614, endColorstr=#008c00);
		}
</style>
<div style="width: 100%; height: 100%; border: none;">

  <div class="table" style="width: 100%; height: 100%; border: none;">
  
    <div class="row">
    
      <div class="cell" style="height: 100px; border-bottom: 1px solid #3465a4; vertical-align: middle;">
        
        <div class="table" style="float: right">
          <div class="row">
            <div id="pageTitle" class="cell" style="font-size: 42px; color: #3465a4; text-align: right; vertical-align: middle; padding-right: 20px;">
              Administration: Users
            </div>
            <div class="cell" style="font-size: 42px; color: #3465a4; text-align: right; vertical-align: middle; padding-right: 20px;">
              <img id="pageIcon" src="/images/settings.png" alt="G.O.M" height="70" />
            </div>
          </div>
        </div>
        
      </div>
    
    </div>
  
    <div class="row">
    
       <table align="center"  height='100%' width='98%'>
							<form id='frm' method='post' action='/admin/edit_user?user_id=<%= params[:user_id]%>&person=<%= params[:person]%>'>
								<tr>
									<td align='left' id='text' width='40%'>
											First name
									</td>
									<td  width='40%'>
											<input class='inputs' type='text' name='user[first_name]' value='<%= @user.first_name%>'>
									</td>
								</tr>
								<tr>
									<td align='left' id='text'>
											Last Name
									</td>
									<td width='40%'>
											<input class='inputs' type='text' name='user[last_name]' value='<%= @user.last_name%>'>
									</td>
								</tr>
								<tr>
									<td align='left' id='text' width='40%'>
											Username
									</td>
									<td  width='40%'>
											<input class='inputs' type='text' name='user[username]' value='<%= @user.username%>'>
									</td>
								</tr>
								<tr>
									<td align='left' id='text'>
											Password
									</td>
									<td width='40%'>
											<input id='pass' class='inputs' type='password' name='user[password]'>
									</td>
								</tr>
								<tr>
									<td align='left' id='text'>
											Password
									</td>
									<td width='40%'><select class='select' size=2 name='user[status]'>
											<option value='ACTIVE'>ACTIVE</option>
											<option value='BLOCKED'>BLOCKED</option>
											</select>
											<input id='pass' class='inputs' type='password' name='user[password]'>
									</td>
								</tr>
								<tr id='hide_pass' style='display:none;'>
									<td align='left' id='text'>
											Confirm Password
									</td>
									<td width='40%'>
											<input  class='inputs' type='password' name='confirm_password'>
									</td>
								</tr>
								</form>
					</table>
    
    </div>
  
    <div class="row">
    
      <div class="cell" style="height: 50px; border-top: 1px solid #3465a4; vertical-align: middle;">
        
        <div style="font-size: 22px; color: #3465a4; padding-right: 15px; float: left;">
          <button id='btn_finish' class='buttons' style='float: left;'  onmousedown='window.location = "/admin/user_list?user_id=<%= params[:user_id]%>"'>Cancel </button>
        </div>
        
		<div style="font-size: 22px; color: #3465a4; padding-right: 15px; float: right;">
          <button id='btn_finish' class='buttons' style='float: right;'  onmousedown='validateInput();'>Done </button>
        </div>
      </div>
    
    </div>
  
  </div>

</div>

<script>
	function gatewayCancel(){
			window.location = '/home';
		}
		
		function confirmPassword(){
		 if (document.getElementById('pass').value.length > 0 ){
			  document.getElementById('hide_pass').style.display = 'inline'			
			}		
			else{
			document.getElementById('hide_pass').style.display = 'none'
			}
		}
		function validateInput(){
				gatewaySubmit()
		}

		function gatewaySubmit(){
		
			
			document.getElementById('frm').submit();
		}
</script>
